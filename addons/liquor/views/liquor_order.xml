<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="liquor_order_view_tree" model="ir.ui.view">
        <field name="name">liquor_order_view_tree_view_tree</field>
        <field name="model">liquor.order</field>
        <field name="arch" type="xml">
            <tree string="liquor_order_view_tree_tree" decoration-success="state == 'sale'"
                       decoration-info="state == 'draft'" decoration-danger="state == 'cancel'">
                <field name="number"/>
                <field name="order_date"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="state" widget="badge" decoration-success="state == 'sale'"
                       decoration-info="state == 'draft'" decoration-danger="state == 'cancel'"/>
            </tree>
        </field>
    </record>
    <record id="liquor_order_view_form" model="ir.ui.view">
        <field name="name">liquor_order_view_form</field>
        <field name="model">liquor.order</field>
        <field name="arch" type="xml">
            <form string="liquor_order_form">
                <header>
                    <button name="action_send_mail" string="Sand Mail" type="object" class="btn-primary"
                             attrs="{'invisible': [('state','=','sent')]}"/>
                    <button name="action_draft" string="Change to Draft" type="object" class="btn-danger"
                            attrs="{'invisible': [('state','=','draft')]}"/>
                    <button name="action_confirm" string="Confirm" type="object" class="btn btn-success"
                             attrs="{'invisible': [('state','=','sale')]}"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-primary"
                             attrs="{'invisible': [('state','=','cancel')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft, sent, sale, cancel"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_customer_preview" type="object" class="oe_stat_button" icon="fa-globe icon">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Customer</span>
                                <span class="o_stat_text">Preview</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title" >
                        <h1>
                            <field name="number" readonly="1"/>
                        </h1>
                     </div>
                    <group>
                        <field name="order_date"/>
                        <field name="partner_id"/>
                        <field name="user_id"/>

                    </group>
                    <notebook>
                        <page string="Order Information">
                            <field name="liquor_order">
                                <tree editable="bottom">
                                    <field name="order_id" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price" readonly="1"/>
                                    <field name="total"/>
                                </tree>
                            </field>
                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group class="oe_subtotal_footer oe_right" colspan="4" name="sale_total">
                                    <field name="tax_totals"  string="Total Amount" nolabel="1" colspan="2" modifiers="{&quot;readonly&quot;: true}"/>
                                </group>
                                <div class="clearfix"/>
                            </group>
                        </page>

                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="liquor_orders_action" model="ir.actions.act_window">
        <field name="name">liquor_order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">liquor.order</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>