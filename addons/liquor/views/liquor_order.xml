<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="liquor_order_view_tree" model="ir.ui.view">
        <field name="name">liquor_order_view_tree_view_tree</field>
        <field name="model">liquor.order</field>
        <field name="arch" type="xml">
            <tree string="liquor_order_view_tree_tree">
                <field name="number"/>
                <field name="order_date"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="liquor_order_view_form" model="ir.ui.view">
        <field name="name">liquor_order_view_form</field>
        <field name="model">liquor.order</field>
        <field name="arch" type="xml">
            <form string="liquor_order_form">
                <header>
                    <button name="action_send_mail" string="Sand Mail" type="object"/>
                    <button name="action_draft" string="Change to Draft" type="object"/>
                    <button name="action_confirm" string="Confirm" type="object" class="btn btn-success"/>
                    <button name="action_cancel" string="Cancel" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft, sent, sale, cancel"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="number" readonly="1"/>
                        </h1>
                     </div>
                    <group>
                        <field name="order_date"/>
                        <field name="partner_id"/>
                        <field name="user_id"/>

                    </group>
                    <notebook>
                        <page string="Order Information">
                            <field name="liquor_order">
                                <tree editable="bottom">
                                    <field name="order_id" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price"/>
                                    <field name="total"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <field name="tax_totals" widget="product_configurator" nolabel="1" colspan="2" readonly="1"/>
                            </group>
                        </page>

                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="liquor_orders_action" model="ir.actions.act_window">
        <field name="name">liquor_order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">liquor.order</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>