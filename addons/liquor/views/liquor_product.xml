<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="kanban_product_views" model="ir.ui.view">
        <field name="name">kanban_product_views</field>
        <field name="model">liquor.product</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="photo"/>
                <field name="currency_id"/>
                <field name="price"/>
                <field name="category_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image me-1">
                                <img t-att-src="kanban_image('liquor.product', 'photo', record.id.raw_value)"
                                     alt="Product" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top mb-0">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>

                                </div>
                                <div>
                                    <field name="category_id"/>
                                </div>
                                <div name="product_lst_price" class="mt-1">
                                    Price: <field name="price" widget="monetary"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="liquor_product_view_tree" model="ir.ui.view">
        <field name="name">liquor_product_view_tree_view_tree</field>
        <field name="model">liquor.product</field>
        <field name="arch" type="xml">
            <tree string="liquor_product_view_tree_tree">
                <field name="name"/>
                <field name="category_id"/>
                <field name="currency_id" invisible="1"/>
                <field name="price"/>
                <field name="stock_qty" optional="show"/>
                <field name="description" optional="hide"/>


            </tree>
        </field>
    </record>
    <record id="liquor_product_view_form" model="ir.ui.view">
        <field name="name">liquor_product_view_form</field>
        <field name="model">liquor.product</field>
        <field name="arch" type="xml">
            <form string="liquor_product_form">
                <sheet>
                    <field name="photo" widget="image" class="oe_avatar"/>
                    <group>
                        <field name="name"/>
                        <field name="category_id"/>
                        <field name="company_id" invisible="1"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="price"/>
                        <field name="stock_qty"/>
                        <field name="description"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="liquor_product_search_view" model="ir.ui.view">
       <field name="name">liquor_product_search_view</field>
       <field name="model">liquor.product</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name"/>
                <field name="category_id"/>
                <field name="price"/>
                <field name="description"/>
        </search>
       </field>
    </record>

    <record id="liquor_product_action" model="ir.actions.act_window">
        <field name="name">Liquor Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">liquor.product</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>