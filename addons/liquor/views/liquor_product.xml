<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="liquor_product_view_tree" model="ir.ui.view">
        <field name="name">liquor_product_view_tree_view_tree</field>
        <field name="model">liquor.product</field>
        <field name="arch" type="xml">
            <tree string="liquor_product_view_tree_tree">
                <field name="name"/>
                <field name="category_id"/>
                <field name="price"/>
                <field name="stock_qty"/>

            </tree>
        </field>
    </record>
    <record id="liquor_product_view_form" model="ir.ui.view">
        <field name="name">liquor_product_view_form</field>
        <field name="model">liquor.product</field>
        <field name="arch" type="xml">
            <form string="liquor_product_form">
                <sheet>
                    <field name="photo" widget="image" class="oe_avatar"/>
                    <group>
                        <field name="name"/>
                        <field name="category_id"/>
                        <field name="company_id" invisible="1"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="price"/>
                        <field name="stock_qty"/>
                        <field name="description"/>

                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <record id="liquor_product_action" model="ir.actions.act_window">
        <field name="name">Liquor Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">liquor.product</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>