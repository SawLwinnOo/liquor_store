<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="product_page">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container mt-3">
                    <title>Product</title>
                    <div class="row o-color-3">
                        <t t-foreach="products" t-as="product">
                            <div class="btn-outline-info col-4 ">
                                <p><span t-field="product.name"/></p>
                                <p><span t-field="product.category_id"/></p>
                                <p><span t-field="product.price"/></p>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>