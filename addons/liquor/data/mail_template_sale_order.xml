<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="mail_template_sale_confirmation" model="mail.template">
            <field name="name">Sale Order Template</field>
            <field name="model_id" ref="liquor.model_liquor_order"/>
            <field name="email_from">{{ user.email }}</field>
            <field name="email_to">{{ object.partner_id.email }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 12px;">
                        Hello,
                        <br/>
                        <br/>
                        Your order <strong t-field="object.number">LS00001</strong> amounting in
                        <strong t-field="object.tax_totals">$ 10.00</strong>
                        has been confirmed.
                        <br/>
                        Thank you for your trust!

                        <br/>
                        <br/>
                        Do not hesitate to contact us if you have any questions.
                        <br/>
                        <br/>
                    </p>
                    <t t-if="object.liquor_order">
                        <table class="table table-borderless text-center">
                            <thead>
                                <tr>
                                    <th scope="col">Product Name</th>
                                    <th scope="col">Qty</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Amount</th>
                                </tr>
                                <tr>
                                    <th colspan="4" class="my-2">
                                        <hr/>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="object.liquor_order" t-as="rec">
                                    <tr>
                                        <td>
                                            <span t-field="rec.product_id"/>
                                        </td>
                                        <td>
                                            <span t-field="rec.quantity"/>
                                        </td>
                                        <td>
                                            <span t-field="rec.price"/>
                                        </td>
                                        <td>
                                            <span t-field="rec.total"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <th class="my-2"/>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <span t-field="object.note"/>
                                    </td>
                                    <td>
                                        <strong>Total Amount</strong>
                                    </td>
                                    <td class="border-top">
                                        <span t-field="object.tax_totals"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                </div>
            </field>
        </record>
    </data>
</odoo>