<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="car_view_tree" model="ir.ui.view">
        <field name="name">car_view_tree</field>
        <field name="model">gas.car</field>
        <field name="arch" type="xml">
            <tree string="car_view_tree_tree">
                <field name="name"/>
                <field name="license_no"/>
                <field name="driver_id" string="Driver"/>
            </tree>
        </field>
    </record>

    <record id="car_view_form" model="ir.ui.view">
        <field name="name">car_view_form</field>
        <field name="model">gas.car</field>
        <field name="arch" type="xml">
            <form string="car_form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="license_no"/>
                        <field name="driver_id" string="Driver"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>

    </record>
    <record id="gas_car_action" model="ir.actions.act_window">
        <field name="name">Car</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">gas.car</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>