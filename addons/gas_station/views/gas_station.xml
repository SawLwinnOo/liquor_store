<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="station_view_tree" model="ir.ui.view">
        <field name="name">station_view_tree</field>
        <field name="model">gas.station</field>
        <field name="arch" type="xml">
            <tree string="station_tree">
                <field name="name"/>
                <field name="company_id" string="Company"/>
                <field name="price_per_unit"/>
                <field name="address"/>
            </tree>
        </field>
    </record>

    <record id="station_view_form" model="ir.ui.view">
        <field name="name">station_view_form</field>
        <field name="model">gas.station</field>
        <field name="arch" type="xml">
            <form string="station_form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id" string="Company"/>
                        <field name="price_per_unit"/>
                        <field name="address"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="gas_station_action" model="ir.actions.act_window">
        <field name="name">Station</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">gas.station</field>
        <field name="view_mode">tree,form</field>
    </record>
        <!-- Top menu item -->

    <menuitem name="Gas Fill Service" id="gas_station.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Config" id="gas_station.menu" parent="gas_station.menu_root"/>


    <!-- actions -->

    <menuitem name="Station" id="gas_station.menu_station" parent="gas_station.menu"
              action="gas_station.gas_station_action" sequence="10"/>
    <menuitem name="Car" id="gas_station.menu_car" parent="gas_station.menu"
               action="gas_station.gas_car_action" sequence="15"/>
    <menuitem name="Booking" id="gas_station.menu_booking" parent="gas_station.menu"
              action="gas_station.gas_booking_action" sequence="0"/>



</odoo>